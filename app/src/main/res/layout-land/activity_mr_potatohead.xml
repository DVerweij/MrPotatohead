<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mr_potatohead"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.danyllo.danylloverweij_pset1.MrPotatohead">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="281dp"
        android:id="@+id/potatohead">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/body"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arms"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ears"
        android:id="@+id/imageView3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eyes"
        android:id="@+id/imageView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nose"
        android:id="@+id/imageView7"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mouth"
        android:id="@+id/imageView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mustache"
        android:id="@+id/imageView8"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hat"
        android:id="@+id/imageView11" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/eyebrows"
        android:id="@+id/imageView12"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shoes"
            android:id="@+id/imageView5"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="293dp"
        app:srcCompat="@drawable/glasses"
        android:id="@+id/imageView9" />

        <ImageView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </FrameLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:id="@+id/checkgrid"
        android:fitsSystemWindows="true">

    <CheckBox
        android:text="Eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eyes"
        android:onClick="changeVisibility"
        android:layout_row="0"
        android:layout_column="0"
        tools:text="Eyes" />

    <CheckBox
        android:text="Nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="changeVisibility"
        android:id="@+id/nose" />

    <CheckBox
        android:text="Mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mouth"
        android:onClick="changeVisibility"
        android:layout_row="1"
        android:layout_column="0"/>

    <CheckBox
        android:text="Ears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeVisibility"
        android:id="@+id/ears"
        android:layout_row="1"
        android:layout_column="1"/>

    <CheckBox
        android:text="Arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arms"
        android:onClick="changeVisibility"
        android:layout_row="2"
        android:layout_column="0"/>

    <CheckBox
        android:text="Eyebrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeVisibility"
        android:id="@+id/eyebrows"
        android:layout_row="2"
        android:layout_column="1"/>

    <CheckBox
        android:text="Mustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeVisibility"
        android:id="@+id/mustache"
        android:layout_row="3"
        android:layout_column="0"/>

    <CheckBox
        android:text="Hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeVisibility"
        android:id="@+id/hat"
        android:layout_row="3"
        android:layout_column="1"/>

    <CheckBox
        android:text="Shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeVisibility"
        android:layout_row="4"
        android:layout_column="0"
        android:id="@+id/shoes" />

    <CheckBox
        android:text="Glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glasses"
        android:onClick="changeVisibility"
        android:layout_row="4"
        android:layout_column="1"/>


    </GridLayout>


</LinearLayout>
